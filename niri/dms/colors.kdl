layout {
    background-color "transparent"

    focus-ring {
        active-color   "#a1c9fd"
        inactive-color "#8d9199"
        urgent-color   "#ffb4ab"
    }

    border {
        active-color   "#a1c9fd"
        inactive-color "#8d9199"
        urgent-color   "#ffb4ab"
    }

    shadow {
        color "#00000070"
    }

    tab-indicator {
        active-color   "#a1c9fd"
        inactive-color "#8d9199"
        urgent-color   "#ffb4ab"
    }

    insert-hint {
        color "#a1c9fd80"
    }
}

/-recent-windows {
    highlight {
        active-color   "#1b4975"
        urgent-color   "#ffb4ab"
    }
}